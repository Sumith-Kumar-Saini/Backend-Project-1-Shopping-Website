<%- include('./partials/header') %>
<% var products = user.cart %>
<% const PlatformFee = 20 %>
<% const ShippingFee = "FREE" %>

    <% if(products.length > 0) { %>
        <% products.forEach((product)=>{ %>

            <div class="w-full flex items-start px-20 pt-10 gap-10">
                <div class="w-[30%] rounded-md overflow-hidden">
                    <div class="w-full h-80 bg-[<%= product.bgcolor %>] flex p-2 items-center justify-center">
                        <img class="w-full h-full object-contain object-center" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="product img">
                    </div>
                    <div class="w-full flex justify-between px-5 py-4 bg-[<%= product.panelcolor %>]">
                        <h3 class="text-2xl text-[<%= product.textcolor %>]"><%= product.name %></h3>
                        <div class="flex items-center gap-2">
                            <i class="cursor-pointer w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            <div class="cursor-pointer px-2 py-1 rounded-md bg-white text-black">01</div>
                            <i class="cursor-pointer w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-5 py-3 bg-[<%= product.panelcolor %>]">
                        <h4 class="text-lg text-[<%= product.textcolor %>]">Net Total</h4>
                        <h2 class="text-lg text-[<%= product.textcolor %>]">₹ <%= product.price %></h2>
                    </div>
                </div>
                <div class="w-[70%]">
                    <h3 class="text-xl">Price Breakdown</h3>
                    <div class="px-10 mt-5">
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Total MRP</h4>
                            <h4>₹ <%= product.price %></h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Discount on MRP</h4>
                            <h4>₹ <%= product.discount %></h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Platform Fee</h4>
                            <h4>₹ <%= PlatformFee %></h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Shipping Fee</h4>
                            <% if (ShippingFee === "FREE") { %>
                            <h4 class="text-green-500"><%= ShippingFee %></h4>
                            <% } else { %>
                                <h4 class="text-zinc-800"><%= ShippingFee %></h4>
                            <% } %>
                        </div>
                    </div>
                    <div class="w-full h-[1px] bg-black mt-10"></div>
                    <div class="flex mt-5">
                        <h3 class="w-1/3 text-xl">Total Amount</h3>
                        <h3 class="font-semibold text-xl text-green-600">₹ <%= product.price - product.discount + PlatformFee %></h3>
                    </div>
                    <form action=""></form>
                </div>
            </div>

        <% }) %>    
    <% } %>
    <div class="p-10 w-full"></div>
    <%- include('./partials/footer') %>